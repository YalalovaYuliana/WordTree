<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Состояние "выбрано" -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/option_color" /> <!-- Цвет фона при выборе -->
            <corners android:radius="30dp" /> <!-- Закругленные углы -->
        </shape>
    </item>

    <!-- Состояние "не выбрано" -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/option_color_unselected" /> <!-- Цвет фона по умолчанию -->
            <corners android:radius="30dp" /> <!-- Закругленные углы -->
        </shape>
    </item>
</selector>